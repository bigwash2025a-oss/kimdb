{
  "name": "kimdb",
  "version": "7.0.0",
  "description": "High-performance document database with CRDT real-time sync",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kimdb": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./crdt": {
      "import": "./dist/crdt/index.js",
      "types": "./dist/crdt/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "build": "tsc && node scripts/post-build.js",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "docs": "typedoc --out docs src/index.ts",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "database",
    "document-database",
    "crdt",
    "real-time",
    "sync",
    "sqlite",
    "websocket",
    "offline-first"
  ],
  "author": "Kim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimdb/kimdb.git"
  },
  "homepage": "https://github.com/kimdb/kimdb#readme",
  "bugs": {
    "url": "https://github.com/kimdb/kimdb/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "@google/genai": "^1.33.0",
    "better-sqlite3": "^11.3.0",
    "fastify": "^4.28.1",
    "ioredis": "^5.0.0",
    "mysql2": "^3.15.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.19.0",
    "typedoc": "^0.26.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "ioredis": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    }
  }
}
